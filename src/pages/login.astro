---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import { db, User} from 'astro:db';


---

<Layout title="Login">
	<main>
  <form id="login-form" method="post" action="/api/signup" class="flex flex-col border border-black justify-center	content-center w-1/3">
    <input type="text" id="aliasUsuario" name="aliasUsuario" placeholder="Nombre de usuario" required>
    <input type="text" id="nombreUsuario" name="nombreUsuario" placeholder="Nombre" required>
    <input type="text" id="apellidoUsuario" name="apellidoUsuario" placeholder="Apellidos" required>
    <input type="email" id="correoUsuario" name="correoUsuario" placeholder="Correo electrónico" required>
    <input type="password" id="password" name="password" placeholder="Contraseña" required>
    <button type="submit">Registrarse</button>
  </form>
  <form id="login-form" method="post" action="/api/signin" class="flex flex-col border border-black justify-center	content-center w-1/3">
    <input type="text" id="aliasUsuario" name="aliasUsuario" placeholder="Nombre de usuario" required>
    <input type="password" id="password" name="password" placeholder="Contraseña" required>
    <button type="submit">Iniciar sesion</button>
  </form>
    <div id="message"></div>

	</main>
</Layout>

