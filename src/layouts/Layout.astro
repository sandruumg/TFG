---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import '@fontsource/bebas-neue'; 
import '@fontsource/open-sans/300.css';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
		--primary: #242A33;
		--secondary: #9ADCB9;
		--secondary-dark: #5AC7AA;
		--tertiary: #E5BB85;
		--quaternary: #D1D0CB;
	}
	html {
		font-family: 'Bebas Neue' ,sans-serif;
		background: #fff;
		background-size: 224px;
		letter-spacing: 2px;

	}

	.fuente-1{
		font-family: 'Bebas Neue' ,sans-serif;
		letter-spacing: 1px
	}
	.fuente-2{
		font-family: 'Open Sans', sans-serif;
	}
	.btn-circle{
		width: 4em !important;
		height: 4em !important;
		margin-left: 5vw;
	}
	.bg-gradient{
		background: linear-gradient(to right, var(--primary), #3D3D3D);
		padding: 3vw 6vw 3vw 6vw; 
		color: white;
	}

	.bg-button-registro{
		height: 3em;
		font-size: 1.4em !important;
		font-weight: 300;
		background-color: var(--secondary) !important;
		padding: 1vw 2vw 1vw 2vw !important;
		border-radius: 6px !important;
		border: none;
		color: white !important;
	}
	.bg-button-registro:hover{
		background-color: var(--secondary-dark) !important;
	}
	.carousel{
		scrollbar-width:thin;
		scrollbar-color: var(--secondary-dark) #f6f6f6;
	}
	#divLibrosAutor{
		scrollbar-width: thin;
		scrollbar-color: var(--secondary-dark) var(--primary);
	}

	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

	.slider{
		width: 100vw;
		height: 90vh;
		overflow: hidden;
		position: relative;
	}
	.slider .list .item{
		width: 100%;
		height: 100%;
		position: absolute;
		inset: 0 0 0 0;
	}
	 .slider .list .item img{
		width: 100%;
		height: 100%;
		object-fit: cover;
	} 

	.slider .list .item .content{
		position: relative;
		top: -95%;
		width: 100em;
		max-width: 80%;
		left: 55%;
		padding-right: 30%;
		box-sizing: border-box;
		color: white;
		box-sizing: border-box;
		transform: translateX(-60%);
	}
	.slider .list .item .content .title{
		font-size: 3vw;
		font-weight: bold;
		line-height: 1.3em;
		
	}
	.slider .list .item .content .type{
		font-size: 2vw;
		color: #5AC7AA;
		font-weight: bold;
		line-height: 1.3em;
	}
	.slider .list .item .content .description{
		margin-top: 2em;
		font-family: 'Open Sans', sans-serif;
		width: 45em;
	}

	.slider .list .item .content .button{
		margin-top: 2em;
		z-index: 100;
	}

	.slider .list .item .content .button a{
		background-color: #5AC7AA;
		font-size: large;
		padding: 1em;
		border-radius: 10px;
		transition: 0.5s;
		cursor: pointer;
	}
	.slider .list .item .content .button a:hover{
		background-color: #242A33;
		font-size: large;
		color:#5AC7AA;
		transition: 0.5s;
	}

	.thumbnail{
		display: flex;
		position: absolute;
		gap: 20px;
		bottom: 50px;
		width: max-content;
		z-index: 100;
		margin-left: 40vw;
	}
	.thumbnail .item{
		width: 12em;
		height: 18em;
		flex-shrink: 0;
		position: relative;
		margin-bottom: 3em;
	}
	.thumbnail .item img{
		object-fit: cover;
		cursor: pointer;
		
	}
	.nextPrev{
		position: absolute;
		top: 80%;
		right: 55%;
		z-index: 100;
		width: 300px;
		max-width: 30%;
		gap: 10px;
		align-items: center;
	}
	.nextPrev button{
		padding: 1em;
		border-radius: 50%;
		background-color: #5AC7AA;
		color: white;
		transition: 0.5s;
	}
	.nextPrev button:hover{
		padding: 1em;
		border-radius: 50%;
		background-color: #3D3D3D;
		color: white;
		transition: 0.5s;
	}
	.current{
		transform: scale(1.2);
	}

	.actual{
		display: block;
	}
</style>
